# SandboxSpy Secure Environment Configuration
# This file should be encrypted or use external secret management

# API Keys (rotate every 30 days)
API_KEY=${SECRETS_MANAGER_API_KEY:-generated_on_deploy}
API_KEY_PREMIUM_1=${SECRETS_MANAGER_API_KEY_PREMIUM_1:-}
API_KEY_PREMIUM_2=${SECRETS_MANAGER_API_KEY_PREMIUM_2:-}
API_KEY_READONLY=${SECRETS_MANAGER_API_KEY_READONLY:-}

# Database Credentials (rotate every 90 days)
DB_PASSWORD=${SECRETS_MANAGER_DB_PASSWORD:-generated_on_deploy}
DB_ROOT_PASSWORD=${SECRETS_MANAGER_DB_ROOT_PASSWORD:-generated_on_deploy}
DB_REPLICA_PASSWORD=${SECRETS_MANAGER_DB_REPLICA_PASSWORD:-}

# Redis Authentication (rotate every 60 days)
REDIS_PASSWORD=${SECRETS_MANAGER_REDIS_PASSWORD:-generated_on_deploy}
REDIS_SENTINEL_PASSWORD=${SECRETS_MANAGER_REDIS_SENTINEL_PASSWORD:-}

# CloudFront Secret (rotate every 180 days)
CLOUDFRONT_SECRET=${SECRETS_MANAGER_CLOUDFRONT_SECRET:-generated_on_deploy}

# Encryption Keys (rotate yearly, maintain key history)
ENCRYPTION_KEY=${SECRETS_MANAGER_ENCRYPTION_KEY:-}
SIGNING_KEY=${SECRETS_MANAGER_SIGNING_KEY:-}

# JWT Secrets (rotate every 30 days)
JWT_SECRET=${SECRETS_MANAGER_JWT_SECRET:-}
JWT_REFRESH_SECRET=${SECRETS_MANAGER_JWT_REFRESH_SECRET:-}

# TLS/SSL Configuration
TLS_CERT_PATH=${SECRETS_MANAGER_TLS_CERT_PATH:-/etc/ssl/certs/sandboxspy.crt}
TLS_KEY_PATH=${SECRETS_MANAGER_TLS_KEY_PATH:-/etc/ssl/private/sandboxspy.key}
TLS_CA_PATH=${SECRETS_MANAGER_TLS_CA_PATH:-/etc/ssl/certs/ca.crt}

# Monitoring & Alerting
DATADOG_API_KEY=${SECRETS_MANAGER_DATADOG_API_KEY:-}
SENTRY_DSN=${SECRETS_MANAGER_SENTRY_DSN:-}
SLACK_WEBHOOK_URL=${SECRETS_MANAGER_SLACK_WEBHOOK_URL:-}

# Backup Encryption
BACKUP_ENCRYPTION_KEY=${SECRETS_MANAGER_BACKUP_ENCRYPTION_KEY:-}
BACKUP_S3_ACCESS_KEY=${SECRETS_MANAGER_BACKUP_S3_ACCESS_KEY:-}
BACKUP_S3_SECRET_KEY=${SECRETS_MANAGER_BACKUP_S3_SECRET_KEY:-}

# External Service Credentials
VIRUSTOTAL_API_KEY=${SECRETS_MANAGER_VIRUSTOTAL_API_KEY:-}
HYBRIDANALYSIS_API_KEY=${SECRETS_MANAGER_HYBRIDANALYSIS_API_KEY:-}
MALWAREBAZAAR_API_KEY=${SECRETS_MANAGER_MALWAREBAZAAR_API_KEY:-}

# Feature Flags & Configuration
ENABLE_DEBUG=false
ENABLE_PROFILING=false
ENABLE_METRICS=true
ENABLE_TRACING=true

# Security Configuration
MAX_REQUEST_SIZE=10485760  # 10MB
SESSION_TIMEOUT=3600       # 1 hour
PASSWORD_MIN_LENGTH=16
REQUIRE_MFA=false
IP_WHITELIST=""
IP_BLACKLIST=""

# Rate Limiting Configuration
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_PREMIUM=1000
RATE_LIMIT_SUBMISSION=10
RATE_LIMIT_WINDOW=60

# Audit & Compliance
ENABLE_AUDIT_LOG=true
AUDIT_LOG_PATH=/var/log/sandboxspy/audit.log
COMPLIANCE_MODE=GDPR
DATA_RETENTION_DAYS=90

# Environment
ENVIRONMENT=production
LOG_LEVEL=info
TIMEZONE=UTC